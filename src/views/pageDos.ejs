<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/stylebodyHome.css">
    <script src="/js/script.js"></script>
</head>

<body>
    <!-- HEADER -->
    <%- include('./partials/header') %>
        <div class="container-filter container">
            <div class="icon-filter">
                <i class="fa-solid fa-filter"></i>
                <span>Filtrar</span>
            </div>

            <div class="filter-bar">

                <label for="filter-select"></label>
                <select id="filter-select">
                    <option value="all">All</option>
                    <option value="normal">Normal</option>
                    <option value="fire">Fire</option>
                    <option value="poison">Poison</option>
                    <option value="water">Water</option>
                    <option value="grass">Grass</option>
                    <option value="electric">Electric</option>
                    <option value="fairy">Fairy</option>
                    <option value="ground">Ground</option>
                    <option value="flying">Flying</option>
                    <option value="bug">Bug</option>
                    <!-- Agrega más opciones de tipo según sea necesario -->
                </select>

                </form>
            </div>
        </div>

        <!-- ... -->
        <main class="list-pokemon">
            <% pokemones.results.forEach((pokemon, index)=> { %>

                <a href="/pokemonPageDos/<%= index +1 %>" class="card-pokemon">
                    <div class="card-img">
                        <img src="<%= images[index] %>" alt="pokemon <%= pokemon.name %>" />
                    </div>
                    <div class="card-info">
                        <span class="pokemon-id">N° <%= index + 21 %></span>
                        <h3>
                            <%= pokemon.name %>
                        </h3>
                        <div class="card-types">
                            <% if (type && type[index]) { %>
                                <% type[index].forEach(tipos=> { %>
                                    <span class="<%= tipos.type.name %>">
                                        <%= tipos.type.name %>
                                    </span>
                                    <% }) %>
                                        <% } %>
                        </div>
                    </div>
                </a>

                <% }) %>
           
        </main>
       
        <div class="container__btn">
           
            <a href="/"><i class="fa-solid fa-arrow-left"></i></a>
    
         </div>
        <!-- FOOTER -->
        <%- include('./partials/footer') %>

</body>

</html>